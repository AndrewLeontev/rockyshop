@model IEnumerable<RockyShop.Models.Product>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" asp-controller="Product" class="btn btn-primary">
                <i class="far fa-plus-square"></i> Create New Product
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width=100%">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Review</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td style="width: 50%;">@obj.Name</td>
                    <td style="width: 10%;">@obj.Price.ToString("C")</td>
                    <td style="width: 20%;">@obj.Category.Name</td>
                    <td style="width: 20%;">@obj.Review.Description</td>
                    <td class="text-center">
                        <a asp-action="Upsert" asp-controller="Product" asp-route-Id="@obj.Id" class="btn btn-primary">
                            <i class="far fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-Id="@obj.Id" class="btn btn-danger">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No product exists.</p>
    }
</div>
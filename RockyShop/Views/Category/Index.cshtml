@model IEnumerable<RockyShop.Models.Category>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary">
                <i class="far fa-plus-square"></i> Create New Category
            </a>
        </div>
    </div>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width=100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td style="width: 50%;">@obj.Name</td>
                    <td style="width: 30%;">@obj.DisplayOrder</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-controller="Category" asp-route-Id="@obj.Id" class="btn btn-primary">
                            <i class="far fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Category" asp-route-Id="@obj.Id" class="btn btn-danger">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exists.</p>
    }
</div>